<%= render partial: 'posts/show_modal', locals: { post: @post} %>

<%= form_with(model: @comment) do |form| %>
  <div>
    <%= form.text_area :body, placeholder: "コメント", maxlength: "200" %>
  </div>

  <div>
    <%= form.hidden_field :post_id, :value => @comment.post_id %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>