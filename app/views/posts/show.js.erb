$(function(){
    $('#modal__content').html("<%= j(render partial: 'posts/modal', locals: {post: @post}) %>");
    $('.js-modal').fadeIn();

    $('.js-modal-close').on('click',function(){
      $('.js-modal').fadeOut();
      $('#modal__content').replace("<%= j(render partial: 'posts/modal', locals: {post: @post}) %>", ""); 
    });   
});